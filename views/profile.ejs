      font-size: 1.5rem;
      color: #1a1a1a;
      padding-bottom: 1rem;
      border-bottom: 2px solid #f0f0f0;
    }

    .form-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .form-group {
      display: flex;
      flex-direction: column;
      gap: 0.7rem;
    }

    .form-group label {
      font-weight: 600;
      color: #1a1a1a;
      font-size: 0.95rem;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.85rem 1rem;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-family: inherit;
      font-size: 0.95rem;
      transition: all 0.3s ease;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #000;
      box-shadow: 0 0 0 3px rgba(0,0,0,0.1);
    }

    .form-group textarea {
