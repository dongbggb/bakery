    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0,0,0,0.2);
    }

    .btn-secondary {
      background: #f0f0f0;
      color: #333;
      border: 2px solid #ddd;
      flex: 1;
    }

    .btn-secondary:hover {
      background: #e0e0e0;
    }

    .alert {
      padding: 1rem 1.5rem;
      border-radius: 8px;
      margin-bottom: 2rem;
      border-left: 4px solid;
    }

    .alert-success {
      background: #d1e7dd;
      color: #0a3622;
      border-color: #198754;
    }

    .alert-error {
      background: #f8d7da;
      color: #842029;
      border-color: #dc3545;
    }

    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      color: #000;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .back-link:hover {
      color: #333;
      margin-left: 0.5rem;
    }
  </style>
</head>
