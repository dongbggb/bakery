                  <% reviewableOrders.forEach(orderId => { %>
                    <option value="<%= orderId %>">ƒê∆°n h√†ng #<%= orderId %></option>
                  <% }); %>
                </select>
              </div>
              <div class="form-group">
                <label for="rating">ƒê√°nh gi√° (sao):</label>
                <select id="rating" name="rating" required>
                  <option value="">-- Ch·ªçn m·ª©c ƒë√°nh gi√° --</option>
                  <option value="5">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ Tuy·ªát v·ªùi (5 sao)</option>
                  <option value="4">‚òÖ‚òÖ‚òÖ‚òÖ R·∫•t t·ªët (4 sao)</option>
