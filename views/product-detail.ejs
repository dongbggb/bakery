            <button type="submit" class="btn btn-wishlist <%= isInWishlist ? 'active' : '' %>">
              <%= isInWishlist ? '‚ù§ ƒê√£ th√≠ch' : '‚ô° Y√™u th√≠ch' %>
            </button>
          </form>
        <% } %>
      </div>
    </div>

    <div class="reviews-section">
      <h2>ƒê√°nh gi√° s·∫£n ph·∫©m</h2>

      <% if (user) { %>
