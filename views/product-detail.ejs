        <% } %>
      </div>

      <div class="product-info">
        <h1><%= product.name %></h1>

        <div class="rating">
          <span class="stars">‚òÖ <%= product.rating.toFixed(1) %></span>
          <span>(<%= product.reviewCount %> ƒë√°nh gi√°)</span>
        </div>

        <div class="price"><%= product.price.toLocaleString('vi-VN') %>ƒë</div>

        <div class="stock-status <%= product.stock > 5 ? 'stock-available' : product.stock > 0 ? 'stock-low' : 'stock-unavailable' %>">
