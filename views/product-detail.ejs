      <div class="reviews-list">
        <% if (reviews.length === 0) { %>
          <div class="no-reviews">Ch∆∞a c√≥ ƒë√°nh gi√° n√†o</div>
        <% } else { %>
          <% reviews.forEach(review => { %>
